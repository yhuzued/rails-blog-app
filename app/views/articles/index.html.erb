<%= render 'articles/navbar' %>

<div class="grid-card">
  <% @articles.each do |article| %>
    <div class="card">
      <div class="card-title">
        <%= article.title %>
      </div>
      <div class="card-body">
        <%= article.body %>
      </div>
      <div class="card-add-comment">
        <%= link_to 'show detail', article %>
      </div>
    </div>
  <% end %>
</div>


